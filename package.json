{
	"name": "vue-simple-calendar-sample",
	"version": "2.2.0",
	"description": "Sample app showing off the vue-simple-calendar component",
	"author": "richardtallent <richard@tallent.us>",
	"license": "MIT",
	"repository": "https://github.com/richardtallent/vue-simple-calendar-sample",
	"private": false,
	"scripts": {
		"dev": "node build/dev-server.js",
		"start": "node build/dev-server.js",
		"build": "node build/build.js"
	},
	"devDependencies": {
		"ajv": "^6.4.0",
		"autoprefixer": "^8.4.1",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.4",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.6.1",
		"babel-register": "^6.26.0",
		"chalk": "^2.4.1",
		"connect-history-api-fallback": "^1.5.0",
		"copy-webpack-plugin": "^4.5.1",
		"cross-env": "^5.1.4",
		"cross-spawn": "^6.0.5",
		"css-loader": "^0.28.11",
		"eslint": "^4.19.1",
		"eslint-friendly-formatter": "^3.0.0",
		"eslint-import-resolver-webpack": "^0.8.4",
		"eslint-loader": "^2.0.0",
		"eslint-plugin-html": "^4.0.3",
		"eslint-plugin-import": "^2.11.0",
		"eslint-plugin-vue": "^4.5.0",
		"eventsource-polyfill": "^0.9.6",
		"express": "^4.16.3",
		"extract-text-webpack-plugin": "^4.0.0-beta.0",
		"file-loader": "^1.1.11",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"html-webpack-plugin": "^3.2.0",
		"http-proxy-middleware": "^0.18.0",
		"opn": "^5.3.0",
		"optimize-css-assets-webpack-plugin": "^4.0.0",
		"ora": "^2.1.0",
		"portfinder": "^1.0.13",
		"rimraf": "^2.6.2",
		"semver": "^5.5.0",
		"shelljs": "^0.8.1",
		"stylelint": "^9.2.0",
		"stylelint-config-standard": "^18.2.0",
		"url-loader": "^1.0.1",
		"vue": "^2.5.16",
		"vue-hot-reload-api": "^2.3.0",
		"vue-loader": "^14.2.2",
		"vue-style-loader": "^4.1.0",
		"vue-template-compiler": "^2.5.16",
		"webpack": "^4.6.0",
		"webpack-bundle-analyzer": "^2.11.1",
		"webpack-dev-middleware": "^3.1.3",
		"webpack-hot-middleware": "^2.22.1",
		"webpack-merge": "^4.1.2"
	},
	"engines": {
		"node": ">= 6.0.0",
		"npm": ">= 5.0.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie < 11"
	],
	"babel": {
		"presets": [
			"env"
		]
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"bracketSpacing": true,
		"trailingComma": "es5"
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab"
		}
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"amd": true,
			"node": true
		},
		"globals": {
			"Vue": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:vue/recommended"
		],
		"rules": {
			"vue/html-indent": "tab",
			"vue/max-attributes-per-line": 3,
			"no-console": "warn"
		}
	},
	"eslintIgnore": [
		"node_modules/*.*"
	],
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"dependencies": {
		"babel-polyfill": "^6.26.0",
		"vue-simple-calendar": "^2.2.0"
	}
}
